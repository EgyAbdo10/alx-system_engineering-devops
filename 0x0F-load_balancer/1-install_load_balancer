#!/usr/bin/env bash
# configure the load balancer

sudo apt-get -y install --no-install-recommends software-properties-common
sudo add-apt-repository -y ppa:vbernat/haproxy-2.9
sudo apt-get -y install haproxy=2.9.\*
sudo chmod 766 /etc/default/haproxy
sudo echo "ENABLED=1" > /etc/default/haproxy
sudo systemctl start haproxy
sudo systemctl enable haproxy
sudo chmod 766 /etc/haproxy/haproxy.cfg
sudo echo -e "\nfrontend http_front\n\tbind *:80\n\tmode http\n\tdefault_backend http_back\n\n backend http_back\n\tbalance roundrobin\n\tserver 433823-web-01 52.23.179.58:80\n\tserver 433823-web-02 54.90.36.155:80\n" >> /etc/haproxy/haproxy.cfg 
sudo service haproxy restart
